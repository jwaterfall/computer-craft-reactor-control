{
    "$schema": "https://raw.githubusercontent.com/MCJack123/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "node",
        "strict": false,
        "strictNullChecks": true,
        "types": ["@jackmacwindows/lua-types/cc", "@jackmacwindows/craftos-types", "@jackmacwindows/cc-types"]
    },
    "tstl": {
        "luaTarget": "CC",
        "luaLibImport": "inline",
        "luaBundle": "dist/startup.lua",
        "luaBundleEntry": "src/startup.ts"
    },
    "include": ["./src/**/*.ts", "event.ts"]
}
